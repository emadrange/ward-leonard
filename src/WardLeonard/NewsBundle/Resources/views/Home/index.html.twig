{% extends '::base.html.twig' %}
{% block section %}
    {% for new in news %}
        <article class="articleNews">
            <h2>
                {{ new.title }}
            </h2>
            <p class="contentNews">{{ new.content | raw }}<img src="{{ asset('News/images/'~ new.photo)  }}" alt=""></p>
            <iframe class="video" width="60%" height="auto" src="https://www.youtube.com/embed/{{ new.video }}"></iframe>
            <p><small>{{ new.datepublication |  date('d/m/Y')}}</small></p>
        </article>
    {% endfor %}
{%  endblock %}


